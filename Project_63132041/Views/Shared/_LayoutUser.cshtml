<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Website Layout</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/StyleUser.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    
</head>
<body>
    <header>
        <div class="top-bar">
            <div class="container">
                <div class="hotline">Hotline: 123-456-7890</div>
                <div class="social-icons">
                    <a href="#" class="social-icon"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="social-icon"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
        <div class="logo-menu">
            <div class="container">
                <div class="logo">
                    <h2>VH STORE</h2>
                </div>
                <nav class="menu">
                    <ul>
                        <li class="nav-item">
                            @Html.ActionLink("Trang chủ", "../SanPhams_63132041/Index", new { @class = "a" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Sản phẩm", "../DSachSanPham_63132041/Index", new { @class = "a" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Giỏ hàng", "../GioHang_63132041/Index", new { @class = "a" })
                        </li>
                        @if (Session["user"] != null)
                        {
                            <li class="nav-item">
                                <form action="@Url.Action("DangXuat", "login_63132041", new { area = "Admin_63132041" })" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="logout-btn nav-link btn-light fw-bold" style="display:inline; border:none; padding:0;">Đăng xuất</button>
                                </form>
                            </li>
                        }
                    </ul>

                </nav>

            </div>
        </div>
    </header>
    <div id="content">
        @RenderBody()
    </div>
    <footer class="footer bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h4>Liên hệ</h4>
                    <p>Địa chỉ: 123 ABC, Hà Nội</p>
                    <p>Điện thoại: (123) 456-7890</p>
                    <p>Email: support@example.com</p>
                </div>
                <div class="col-md-4">
                    <h4>Liên kết nhanh</h4>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-decoration-none text-black">Trang chủ</a></li>
                        <li><a href="#" class="text-decoration-none text-black">Giới thiệu</a></li>
                        <li><a href="#" class="text-decoration-none text-black">Sản phẩm</a></li>
                        <li><a href="#" class="text-decoration-none text-black">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h4>Theo dõi tại</h4>
                    <ul class="list-unstyled social-media ">
                        <li><a href="#" class="text-decoration-none text-black"><i class="fa fa-facebook"></i> Facebook</a></li>
                        <li><a href="#" class="text-decoration-none text-black"><i class="fa fa-twitter"></i> Twitter</a></li>
                        <li><a href="#" class="text-decoration-none text-black"><i class="fa fa-instagram"></i> Instagram</a></li>
                        <li><a href="#" class="text-decoration-none text-black"><i class="fa fa-linkedin"></i> LinkedIn</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>&copy; 2024 Your Company. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("Scripts", required: false)
</body>
</html>
