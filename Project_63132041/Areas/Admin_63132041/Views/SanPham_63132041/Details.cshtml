@model Project_63132041.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin_63132041/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .details-container {
        width: 80%;
        margin: 50px auto;
        background: #fff;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        font-size: 14px;
        border-radius: 8px;
    }

    .details-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .details-table caption {
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: bold;
            color: #333;
        }

        .details-table td {
            padding: 10px;
            vertical-align: top;
        }

            .details-table td img {
                max-width: 200px;
                height: auto;
                border-radius: 8px;
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
            }

            .details-table td.label {
                font-weight: bold;
                width: 150px;
                color: #555;
            }

    .actions {
        margin-top: 20px;
        text-align: right;
    }

        .actions a {
            text-decoration: none;
            color: #fff;
            background-color: gold;
            padding: 10px 15px;
            border-radius: 5px;
            margin-right: 10px;
            transition: background-color 0.3s ease;
        }

            .actions a:hover {
                background-color: goldenrod;
            }

    .btn-secondary {
        background-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<div class="details-container">
    <table class="details-table">
        <caption>THÔNG TIN CHI TIẾT</caption>
        <tr>
            <td rowspan="6">
                <img src="/Images/@Html.DisplayFor(model => model.AnhSP)" alt="@Html.DisplayFor(model => model.TenSP)" />
            </td>
            <td class="label">Mã sản phẩm:</td>
            <td>@Html.DisplayFor(model => model.MaSP)</td>
        </tr>
        <tr>
            <td class="label">Tên sản phẩm:</td>
            <td>@Html.DisplayFor(model => model.TenSP)</td>
        </tr>
        <tr>
            <td class="label">Mô tả sản phẩm:</td>
            <td>@Html.DisplayFor(model => model.MoTaSP)</td>
        </tr>
        <tr>
            <td class="label">Giá bán:</td>
            <td>@Html.DisplayFor(model => model.DonGia)</td>
        </tr>
        <tr>
            <td class="label">Số lượng:</td>
            <td>@Html.DisplayFor(model => model.Soluong)</td>
        </tr>
        <tr>
            <td class="label">Loại sản phẩm:</td>
            <td>@Html.DisplayFor(model => model.LoaiSanPham.TenLSP)</td>
        </tr>
    </table>
    <div class="actions">
        @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaSP }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>

