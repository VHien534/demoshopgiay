@model Project_63132041.Models.KhachHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin_63132041/Views/Shared/_LayoutAdmin.cshtml";
    string gtinh = "";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .details-container {
        width: 60%;
        margin: 50px auto;
        background: #fff;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    .details-header {
        background-color: hotpink;
        color: white;
        padding: 10px 20px;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin: -20px -20px 20px;
    }

    .details-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .details-table caption {
            font-size: 24px;
            margin-bottom: 20px;
            font-weight: bold;
            text-align: left;
        }

        .details-table td {
            padding: 10px;
            vertical-align: top;
            border-bottom: 1px solid #ddd;
        }

            .details-table td.label {
                font-weight: bold;
                width: 200px;
                color: #333;
            }

            .details-table td.value {
                color: #555;
            }

    .actions {
        text-align: center;
        margin-top: 20px;
    }

        .actions a {
            text-decoration: none;
            color: #fff;
            background-color: hotpink;
            padding: 10px 20px;
            border-radius: 5px;
            margin-right: 10px;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

            .actions a:hover {
                background-color: black;
            }

            .actions a:last-child {
                margin-right: 0;
            }
</style>

<div class="details-container">
    <div class="details-header">THÔNG TIN CHI TIẾT</div>
    <table class="details-table">
        <tr>
            <td class="label">Mã Khách hàng:</td>
            <td class="value">@Html.DisplayFor(model => model.MaKH)</td>
        </tr>
        <tr>
            <td class="label">Họ tên khách hàng:</td>
            <td class="value">@Html.DisplayFor(model => model.HoTen)</td>
        </tr>
        <tr>
            <td class="label">Email:</td>
            <td class="value">@Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <td class="label">Số điện thoại:</td>
            <td class="value">@Html.DisplayFor(model => model.SDT)</td>
        </tr>
        <tr>
            <td class="label">Địa chỉ:</td>
            <td class="value">@Html.DisplayFor(model => model.DiaChi)</td>
        </tr>
        <tr>
            <td class="label">Giới tính:</td>
            <td>
                @{if (Model.Gioitinh == true)
                    { gtinh = "Nam"; }
                    else
                    { gtinh = "Nữ"; }
                }
                @gtinh
            </td>
        </tr>
    </table>
    <div class="actions">
        @Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaKH }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>